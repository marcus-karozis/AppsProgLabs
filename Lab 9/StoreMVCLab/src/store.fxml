<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane xmlns:fx="http://javafx.com/fxml" fx:controller="StoreController" alignment="center" hgap="10" vgap="10">
    <Label text="Product" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <Text text="" fx:id="nameTxt" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
    <Label text="Stock" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <Text text="197 Items" fx:id="stockTxt" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    <Label text="Price" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <Text text="" fx:id="priceTxt" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Label text="Sell" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <TextField text="0" fx:id="amountTf" GridPane.columnIndex="1" GridPane.rowIndex="3" GridPane.columnSpan="2"/>
    <HBox alignment="CENTER_RIGHT" spacing="10" GridPane.columnIndex="2" GridPane.rowIndex="4">
        <Button text="Sell" fx:id="sellBtn" onAction="#handleSell"/>
    </HBox>

    <Label text="Cash" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
    <Text text="" fx:id="cashTxt" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
</GridPane>